<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- Console appender with minimal formatting for tests -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<!-- Reduce Jetty logging levels to minimize verbose HTTP output -->
	<logger name="org.eclipse.jetty" level="WARN" />
	<logger name="org.eclipse.jetty.server" level="INFO" />
	<logger name="org.eclipse.jetty.webapp" level="INFO" />
	<logger name="org.eclipse.jetty.util" level="WARN" />
	<logger name="org.eclipse.jetty.io" level="WARN" />
	<logger name="org.eclipse.jetty.http" level="WARN" />

	<!-- Keep our test output visible -->
	<logger name="ortus.boxlang.servlet.integration" level="INFO" />

	<!-- Set root level to INFO to reduce overall verbosity -->
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>